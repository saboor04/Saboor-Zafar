<html>
<head>
  <title>My Tasks App!</title>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="/javascripts/angularApp.js"></script>
<script>
var drawerClosed=true;
function toggleFormView(){
if(drawerClosed){
	document.getElementById('myform').className="formShow";
	document.getElementById('togglebutton').value="Close Task Form";
	drawerClosed=false;
}else{
	document.getElementById('myform').className="formHide";
	document.getElementById('togglebutton').value="Open Task Form";
	drawerClosed=true;
}
}
</script>
<style>
.glyphicon-remove { cursor:pointer }

table, td,th  {
  border: 1px solid grey;
  border-collapse: collapse;
  padding: 5px;
  cursor:pointer;
}
.formHide{
	display:none;
	transition: 1s linear all;
}
.formShow{
	display:block;
	transition: 1s linear all;
}

</style>
</head>

<body ng-app="task" ng-controller="MainCtrl" data-ng-init="init()">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
<hr/>
      <form ng-show="isOpen" ng-submit="addTask()" id="myform" 
        style="margin-top:30px;">
        <h2>My Task Form</h2>

        <div class="form-group">
          <input type="text" required
            class="form-control"
            placeholder="Title"
            ng-model="title"></input>
        </div>
        <div class="form-group">
          <textarea required
          class="form-control"
          placeholder="Description"
          ng-model="description"></textarea>
        </div>
	<input type="hidden" ng-model="id"/>
        <button ng-show="isAdd" type="submit" class="btn btn-primary">Add</button>
        <button ng-show="!isAdd" class="btn btn-primary">Update</button> 
	<input type="button" type="cancel"  ng-click="clearForm()" class="btn btn-info" value="Cancel"/>
      </form>

<input type="button" ng-show="!isOpen" value="Add Task" id="togglebutton" class="btn btn-primary" ng-click="openForm()"/>

      <div class="page-header">
        <h2>My Task List</h2>
      </div>
	<table>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th></th>
		</tr>
		<tr ng-repeat="task in tasks | orderBy: '-title'" >
			<td ng-if="$odd"  style="background-color:#f1f1f1" ng-click="editTask(task)">{{ task.title }}</td>
			<td ng-if="$even"  ng-click="editTask(task)">{{ task.title}}</td>
			<td ng-if="$odd"  style="background-color:#f1f1f1" ng-click="editTask(task)">{{ task.description }}</td>
			<td ng-if="$even"  ng-click="editTask(task)">{{ task.description }}</td>
			<td>
				<span class="glyphicon glyphicon-remove btn btn-danger"
	          			ng-click="deleteTask(task)">
				</span>
			</td>
		</tr>
	</table> 


    </div>
  </div>

</body>
</html>
