			<th>Delete</th>
		</tr>
		<tr ng-repeat="task in tasks | orderBy: '-title'">
			<td ng-if="$odd" style="background-color:#f1f1f1">{{ task.title }}</td>
			<td ng-if="$even">{{ task.title}}</td>
			<td ng-if="$odd" style="background-color:#f1f1f1">{{ task.description }}</td>
			<td ng-if="$even">{{ task.description }}</td>
			<td>
				<span class="glyphicon glyphicon-remove"
	          			ng-click="deleteTask(task)">
				</span>
			</td>
